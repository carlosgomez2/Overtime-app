<%= form_for @post, class: "form-group row" do |f| %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">  
    <%= f.label :post %>
    <%= f.text_area :rationale, class: "form-control form-control-lg" %>
  </div>
  <%= f.submit 'Save', class: "btn btn-primary btn-block" %>
<% end %>
